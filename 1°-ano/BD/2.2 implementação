create database db_produtos_limpeza

use db_produtos_limpeza

create table tb_cliente(
	codigo				int,
	nome				varchar(50),
	telefone			varchar(20),
	limite_credito		varchar(10),
	status_cliente		varchar(20),
	endereco			varchar(30)
	primary key			(codigo) 
);
