create table tb_produtos(
	id_produtos				int,
	nome					varchar(20),
	pre�o					varchar(7),
	id_categoria			int
	foreign key (id_categoria) references tb_categoria(id_categoria)
	primary key(id_produtos)
);

select*from tb_produtos

create table tb_pedidos(
	numero					int,
	quantidade				varchar(5),
	data_emissao			varchar(8),
	primary key				(numero)
);

select*from tb_pedidos

create table tb_produto_pedido(
	id_pp						int,
	numero				        int,
	id_produtos					int,
	foreign key (id_produtos) references tb_produtos(id_produtos),
	foreign key (numero) references tb_pedidos(numero),
	primary key					(id_pp)
);

select*from tb_produto_pedido


drop table tb_produto_pedido
drop database db_produtos_limpeza







